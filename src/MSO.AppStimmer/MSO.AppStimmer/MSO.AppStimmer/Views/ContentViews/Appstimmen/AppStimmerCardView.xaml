<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="MSO.StimmApp.Views.ContentViews.Appstimmen.AppStimmerCardView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:elements="clr-namespace:MSO.StimmApp.Elements;assembly=MSO.StimmApp"
    xmlns:stimmApp="clr-namespace:MSO.StimmApp;assembly=MSO.StimmApp"
    xmlns:xfShapeView="clr-namespace:XFShapeView;assembly=XFShapeView"
    BindingContext="{Binding AppStimmer, Source={StaticResource Locator}}">
    <ContentView.Content>
        <elements:SwipeCardView
            x:Name="SwipeCardView"
            ItemsSource="{Binding AppStimmers}"
            TopItem="{Binding CurrentAppStimmer}">
            <elements:SwipeCardView.ItemTemplate>
                <DataTemplate x:Name="AppstimmerTemplate">
                    <Frame
                        Padding="0"
                        CornerRadius="8"
                        InputTransparent="True">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <ScrollView
                                x:Name="Scroller"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                InputTransparent="True">
                                <Grid RowSpacing="0" VerticalOptions="Fill">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Image
                                        x:Name="AppStimmerPicture"
                                        Grid.Row="0"
                                        Aspect="AspectFill"
                                        HeightRequest="400"
                                        HorizontalOptions="Fill"
                                        Source="{Binding Picture, Converter={StaticResource ImageSourceConverter}}"
                                        VerticalOptions="Center" />

                                    <Grid Grid.Row="1" BackgroundColor="White">
                                        <StackLayout Orientation="Vertical" Spacing="0">
                                            <Label
                                                Margin="10,10,0,0"
                                                FontSize="20"
                                                Text="{Binding Title}" />
                                            <Label
                                                Margin="10,0,0,10"
                                                FontSize="15"
                                                Text="{Binding Appstract}" />
                                        </StackLayout>
                                    </Grid>
                                </Grid>
                            </ScrollView>

                            <StackLayout
                                Grid.Row="0"
                                Orientation="Horizontal"
                                Spacing="0"
                                VerticalOptions="StartAndExpand">
                                <Image
                                    x:Name="LikeImage"
                                    Margin="20,35,0,0"
                                    Aspect="AspectFit"
                                    HeightRequest="80"
                                    Opacity="0.0"
                                    Rotation="-30"
                                    Source="{stimmApp:ImageResource MSO.StimmApp.Resources.Images.like.png}"
                                    VerticalOptions="StartAndExpand"
                                    WidthRequest="150" />
                                <Image
                                    x:Name="DislikeImage"
                                    Margin="0,35,20,0"
                                    Aspect="AspectFit"
                                    HeightRequest="80"
                                    Opacity="0.0"
                                    Rotation="30"
                                    Source="{stimmApp:ImageResource MSO.StimmApp.Resources.Images.nope.png}"
                                    VerticalOptions="EndAndExpand"
                                    WidthRequest="150" />
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </elements:SwipeCardView.ItemTemplate>
        </elements:SwipeCardView>
    </ContentView.Content>
</ContentView>