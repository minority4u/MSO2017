<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="MSO.StimmApp.Controls.AppStimmerAttachmentButton"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <Grid x:Name="Root" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Source="{Binding IconSource, Converter={StaticResource ImageSourceConverter}}" x:Name="AttachmentImageButton">
                <Image.GestureRecognizers >
                    <TapGestureRecognizer Tapped="AttachmentImageButton_OnTapped" />
                </Image.GestureRecognizers>
            </Image>
            <Label
                Grid.Row="1"
                FontSize="8"
                HorizontalTextAlignment="Center"
                Text="{Binding Description}" />
        </Grid>
    </ContentView.Content>
</ContentView>