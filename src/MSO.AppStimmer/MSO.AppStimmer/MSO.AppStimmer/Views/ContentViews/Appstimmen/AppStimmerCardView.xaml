<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="MSO.StimmApp.Views.ContentViews.Appstimmen.AppStimmerCardView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:elements="clr-namespace:MSO.StimmApp.Elements;assembly=MSO.StimmApp"
    xmlns:stimmApp="clr-namespace:MSO.StimmApp;assembly=MSO.StimmApp"
    BindingContext="{Binding AppStimmer, Source={StaticResource Locator}}">
    <ContentView.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80*" />
                <RowDefinition Height="20*" />
            </Grid.RowDefinitions>

            <elements:SwipeCardView
                x:Name="SwipeCardView"
                Grid.Row="0"
                ItemsSource="{Binding AppStimmers}"
                TopItem="{Binding CurrentAppStimmer}">
                <elements:SwipeCardView.ItemTemplate>
                    <DataTemplate x:Name="AppstimmerTemplate">
                        <Grid>
                            <Image
                                x:Name="AppStimmerPicture"
                                Aspect="AspectFill"
                                HorizontalOptions="Fill"
                                Source="{Binding Picture, Converter={StaticResource ImageSourceConverter}}"
                                VerticalOptions="Fill" />
                            <Grid
                                x:Name="OverlayBox"
                                BackgroundColor="Transparent"
                                InputTransparent="True" />

                        </Grid>
                    </DataTemplate>
                </elements:SwipeCardView.ItemTemplate>
            </elements:SwipeCardView>

            <Grid
                x:Name="ButtonsGrid"
                Grid.Row="1"
                BackgroundColor="{Binding Source={x:Static stimmApp:App.Settings}, Path=AppColors.NoSwipeIndicatorColor}">
                <Image
                    Margin="10,0,0,0"
                    HorizontalOptions="Start"
                    Source="{stimmApp:ImageResource MSO.StimmApp.Resources.Icons.thumbs_down_red_circle.scale-100.png}" />
                <Image
                    x:Name="ShowDetailsButton"
                    Margin="0,0,0,0"
                    HorizontalOptions="Center"
                    Source="{stimmApp:ImageResource MSO.StimmApp.Resources.Icons.info_blue_circle.scale-100.png}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ShowDetailsImageButton_OnTapped" />
                    </Image.GestureRecognizers>
                </Image>
                <Image
                    Margin="0,0,10,0"
                    HorizontalOptions="End"
                    Source="{stimmApp:ImageResource MSO.StimmApp.Resources.Icons.thumbs_up_green_circle.scale-100.png}" />
            </Grid>
        </Grid>
    </ContentView.Content>
</ContentView>