                VerticalOptions="Start">
                <StackLayout Orientation="Horizontal">
                    <Image
                        Margin="15"
                        HeightRequest="57"
                        HorizontalOptions="Start"
                        Source="{stimmApp:ImageResource MSO.StimmApp.Resources.Icons.arrow-left.scale-100.png}"
                        VerticalOptions="Start">
